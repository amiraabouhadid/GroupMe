<div class="new-sess-container">
  <div class="px-5 text-center">
    <div class="py-4 ">
      <h1 class="text-light font-weight-bold">
        <i class="fas fa-book mb-4"></i>
        <br>
        COURSE GROUPS</h1>
    </div>
    <div class="text-light my-4">
      <p>Create and group your courses!</p>
    </div>
    <div class="form-container">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true, input_html: { autocomplete: "name" }%>
        <%= f.input :email, required: false, input_html: { autocomplete: "email" } %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions p-5">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
<%= render "devise/shared/links" %>

  </div>
</div>
</div>
